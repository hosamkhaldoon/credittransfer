{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/credittransfer-webhandler-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },

  "CreditTransferApi": {
    "BaseUrl": "http://localhost:5002",
    "TransferEndpoint": "/api/credittransfer/transfer",
    "Timeout": "00:00:30"
  },

  "Keycloak": {
    "Authority": "http://localhost:30080/realms/credittransfer",
    "TokenEndpoint": "http://localhost:30080/realms/credittransfer/protocol/openid-connect/token",
    "ClientId": "credittransfer-api",
    "ClientSecret": "your-client-secret",
    "GrantType": "password",
    "Username": "admin",
    "Password": "admin123",
    "Scope": "openid profile email",
    "RequireHttpsMetadata": false,
    "ValidateAudience": false
  },

  "CountryCode": "968",

  "OpenTelemetry": {
    "ServiceName": "CreditTransfer.WebHandler",
    "ServiceVersion": "1.0.0",
    "Exporters": {
      "Console": {
        "Enabled": true
      },
      "OTLP": {
        "Enabled": false,
        "Endpoint": "http://localhost:4317"
      },
      "Prometheus": {
        "Enabled": true
      }
    }
  },

  "HealthChecks": {
    "UI": {
      "Enabled": false
    }
  }
} 